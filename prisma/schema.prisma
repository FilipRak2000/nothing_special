// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  nickname String
  email String
  password String
  isAdmin Boolean
  articles Articles[] @relation("User Articles")
  comments Comments[] @relation("User Comments")

}

model Articles {
  id String @id @default(uuid())
  title String
  articletype String?
  clickbait String
  body String
  author User @relation("User Articles", fields: [authorId], references: [id])
  authorId String
  comments Comments[] @relation("Article Comments")
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Comments {
  id String @id @default(uuid())
  body String
  user User @relation("User Comments", fields: [userId], references: [id] )
  userId String
  article Articles @relation("Article Comments", fields: [articleId], references: [id])
  articleId String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

