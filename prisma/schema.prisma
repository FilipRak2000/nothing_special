generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  nickname String
  email String @unique
  hash String
  articles Article[] @relation("User Articles")
  comments Comment[] @relation("User Comments")

  @@map("users")

}

model Article {
  id String @id @default(uuid())
  title String
  articletype String?
  clickbait String
  body String
  author User @relation("User Articles", fields: [authorId], references: [id])
  authorId String
  comments Comment[] @relation("Article Comments")
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("articles")
}

model Comment {
  id String @id @default(uuid())
  body String
  user User @relation("User Comments", fields: [userId], references: [id] )
  userId String
  article Article @relation("Article Comments", fields: [articleId], references: [id])
  articleId String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("comments")
}

